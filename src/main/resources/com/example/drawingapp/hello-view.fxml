<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<AnchorPane fx:id="anchorPane" prefHeight="600.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.drawingapp.HelloController">
    <children >
        <HBox alignment="BASELINE_CENTER" minWidth="900.0" layoutY="10.0" layoutX="10.0" spacing="10.0">
            <Label fx:id="infoLabel" text="Click on a button to select tool"/>
        </HBox>
        <VBox fx:id="vbox" layoutX="10.0" layoutY="60.0" spacing="10.0">
            <Label alignment="CENTER" minWidth="120.0" fx:id="moneyLabel" text="insert money"/>
            <Button minWidth="120.0" fx:id="selectButton" text="Select"/>
            <Button minWidth="120.0" fx:id="boxButton" text="Building"/>
            <Button minWidth="120.0" fx:id="roadButton" text="Road"/>
        </VBox>
        <Pane styleClass="bordered" layoutX="150.0" layoutY="50.0"  prefHeight="500.0" prefWidth="650.0">
            <Canvas fx:id="overlayCanvas" height="500.0" width="650.0" />
            <Canvas fx:id="midCanvas" height="500.0" width="650.0"/>
            <Canvas fx:id="canvas" height="500.0" width="650.0" />
        </Pane>
    </children>
</AnchorPane>